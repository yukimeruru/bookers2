<div class="container">
  <div class="row">
    <div class="col-3">
    <%= render 'users/user', book:@book %>
    <%= render 'users/user', user:@user %>

    <div class="col-8">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        <tbody></tbody>
        </table>
      <% @users.each do |user| %>
        <div>
          <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
          <p><%= user.name %></p>
          <p><%= link_to "Show", user_path(user) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>