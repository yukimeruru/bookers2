<div class="col-md-3">
      <h2>Uaer info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>intrduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>

        <div class="row">
          <% if user.id == current_user.id %>
          <a class="btn btn-block btn-outline-secondary fas fa-user-cog"><%= link_to "", edit_user_path(@user) %></a>
          <% end %>
        </div>

      <h2>New book</h2>
      <%= form_with model: book, local:true do |f| %>

        <p>Title</p>
        <%= f.text_field :title %>

        <p>Opinion</p>
        <%= f.text_field :body %>

        <p><input type="submit" value="Create Book" class="btn btn-success " data-disable-with="Create Book"></p>
      <% end %>
    </div>