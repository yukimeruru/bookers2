<div class="container">
  <div class="row">
    <div class="col-md-3">
    <%= render 'users/list',user:@user %>

      <h2>New book</h2>
      <%= form_with model: @new_book, local:true do |f| %>

        <p>Title</p>
        <%= f.text_field :title %>

        <p>Opinion</p>
        <%= f.text_area :body %>

        <%= f.submit "Create Book", class: "btn btn-success" %>
      <% end %>
    </div>

      <div class="col-md-8 offset-md-1">
        <h2>Book detailn</h2>
        <table class="table table-hover table-inverse">

          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <% if @book.user.id == current_user.id %>
              <td>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm"=>"本当に消しますか？", class: "btn btn-sm btn-danger" %>
              </td>
              <% end %>
            </tr>

          </tbody>
        </table>

        </div>
      </div>
  </div>
</div>
